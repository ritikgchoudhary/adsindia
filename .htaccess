<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On
    RewriteBase /

    # Mark SPA routes so we can send no-cache (user/courses, login, etc.)
    SetEnvIf Request_URI "^/(user|login|register|master_admin|campaigns|contact|policy|all-courses)(/|$)" SPA_PAGE=1

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # API and special routes go to Laravel
    RewriteCond %{REQUEST_URI} ^/(api|ipn|track|cron|clear|user/social-login|advertiser/social-login|admin) [NC]
    RewriteRule ^ index.php [L]

    # Master Admin â€“ Vue SPA (must not go to Laravel)
    RewriteCond %{REQUEST_URI} ^/master_admin(/.*)?$ [NC]
    RewriteRule ^ public/index.html [L]

    # Serve Vue.js built assets from public/assets/ (priority)
    RewriteCond %{REQUEST_URI} ^/assets/(.*)$
    RewriteCond %{DOCUMENT_ROOT}/public/assets/%1 -f
    RewriteRule ^assets/(.*)$ public/assets/$1 [L]

    # Serve other static files from root assets directory
    RewriteCond %{REQUEST_URI} ^/assets/
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f
    RewriteRule ^ - [L]

    # Static files that exist directly (not in assets)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # For Vue.js SPA - serve index.html for all other routes (set env so we can no-cache it)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ public/index.html [L,E=SPA:1]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent caching of SPA pages so /user/courses etc show latest after deploy
    Header set Cache-Control "no-cache, no-store, must-revalidate" env=SPA
    Header set Pragma "no-cache" env=SPA
    Header set Cache-Control "no-cache, no-store, must-revalidate" env=SPA_PAGE
    Header set Pragma "no-cache" env=SPA_PAGE
    Header set Expires "0" env=SPA_PAGE
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    
    # Set proper MIME types for assets
    <FilesMatch "\.(js)$">
        Header set Content-Type "application/javascript"
    </FilesMatch>
    <FilesMatch "\.(css)$">
        Header set Content-Type "text/css"
    </FilesMatch>
</IfModule>

# MIME Types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
</IfModule>

# Prevent access to sensitive files
<FilesMatch "^(\.env|\.git|composer\.(json|lock)|package\.json|package-lock\.json|yarn\.lock|\.htaccess)$">
    Order allow,deny
    Deny from all
</FilesMatch>
